class Problem_2_EvenNumberOfDigits {
    public int findNumbers(int[] nums) {
        int sol = 0;                            
	    for(int n : nums)                      
		    if(getNumberOfDigits(n) % 2 == 0) 
			    sol++;                          
	    return sol;                             
}

    public int getNumberOfDigits(int num) {
	    int count = 1;                         
	    while((num /= 10) != 0)                 
		    count++;                           
	    return count;
    }
}
