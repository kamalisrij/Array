class Solution {
    public void duplicateZeros(int[] arr) {
    int n = arr.length, c = 0;
    
    for (int num : arr) if (num == 0) c++;
    int i = n - 1;
    int a = n + c - 1;
    
    while (i >= 0 && a >= 0)  {
      
      if (arr[i] != 0) {
        if (a < n) arr[a] = arr[i];
        
      } else {
        if (a < n) arr[a] = arr[i];
        a--;
        if (a < n) arr[a] = arr[i];
      }
      
      i--;
      a--;
    }
}
}
