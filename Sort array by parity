class Solution {
    public int[] sortArrayByParity(int[] nums) {
        int arr[]=new int[nums.length];
        int i=0;
        int e=nums.length-1;
        for(int j=0;j<nums.length;j++)
        {
            if(nums[j]%2==0)
                arr[i++]=nums[j];
            else
                arr[e--]=nums[j];
        }
        return arr;
        
    }
}
